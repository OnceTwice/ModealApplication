<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e5e5e2"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">
    <!-- android:background="#E5E5E2" -->

    <android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_item_detail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/colorModeal">
                <!-- 아이디인 툴바 로그인 부분은 내 아이디로 변경해줘야함 -->

                <!-- text에 자신에게 맞는 이름 쓰기 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="상품 상세 목록"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.AppBarLayout>
        <!-- layout_behavior를 사용해야 액션바 밑에서부터 출력 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#fff"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/item_detail_image"
                    android:layout_width="320dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp" />

                <!-- 유통기한 : 나중에 날짜 시간으로 변경해야함 -->
                <TextView
                    android:id="@+id/item_detail_clock"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:background="#E74B59"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="14dp" />

                <!-- 상품명 / 원가 / 판매가 -->
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/item_detail_name"
                        android:layout_width="150dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="TextView"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/item_detail_ori_price"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:text="TextView"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/item_detail_price"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:text="TextView"
                        android:textSize="17dp" />

                    <TextView
                        android:id="@+id/send_no"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- 매장명 / 별점 ★★★★★ / 거리 / 찜♡ 버튼 -->
                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:orientation="vertical"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/item_detail_shop_name"
                            android:layout_width="180dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="3dp"
                            android:layout_weight="1"
                            android:text="TextView"
                            android:textSize="17dp" />

                        <RatingBar
                            android:id="@+id/item_detail_ratingBar"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:paddingLeft="2dp"
                            android:rating="5" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/item_detail_distance"
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="TextView"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="56dp"
                        android:layout_height="wrap_content"
                        android:background="#fff"
                        app:srcCompat="@drawable/heart2" />
                </LinearLayout>
            </LinearLayout>

            <!-- 상품 상세 정보 -->

            <!-- 숨기기 / 수정 / 삭제 버튼-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <Button
                    android:id="@+id/button_hiding_item"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#E74B59"
                    android:text="숨기기"
                    android:textColor="#fff"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/button_modify_item"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#E74B59"
                    android:text="수정"
                    android:textColor="#fff"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/button_delete_item"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#E74B59"
                    android:text="삭제"
                    android:textColor="#fff"
                    android:textSize="14dp" />
            </LinearLayout>

            <!-- 해당 매장의 또다른 상품 목록 : 리스트를 만들어 띄워야함 ㅜㅜ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/aroow_left"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    app:srcCompat="@drawable/arrow_left" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/other_item_image"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="#fff"
                        app:srcCompat="@drawable/apple" />

                    <TextView
                        android:id="@+id/other_item_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="사과"
                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/other_item_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="10,000 원"
                        android:textSize="12dp" />

                </LinearLayout>

                <ImageButton
                    android:id="@+id/arrow_right"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    app:srcCompat="@drawable/arrow_right" />

            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
