<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/notice_next"
        android:id="@+id/notice_next"
        android:layout_weight="1" />

    <TextView
        android:text="제목"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:id="@+id/notice_title"
        android:textSize="18dp"
        android:layout_weight="7"
        android:paddingLeft="15dp"/>

    <TextView
        android:text="시간"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notice_time"
        android:layout_weight="4" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notice_linear_hide"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone">

        <TextView
            android:background="#E5E5E2"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:padding="1dp"/>
        <TextView
            android:text="TextView"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/notice_content" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/background_tab"
            android:id="@+id/notice_image" />

    </LinearLayout>

</LinearLayout>


