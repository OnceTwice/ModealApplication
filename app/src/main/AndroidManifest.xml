<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.ff.modealapplication">

<!-- 인터넷 권한 -->
<uses-permission android:name="android.permission.INTERNET" />
<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

<application android:allowBackup="true" android:icon="@drawable/logo1" android:label="@string/app_name"
    android:supportsRtl="true" android:theme="@style/AppTheme">
    <activity android:name=".app.ui.main.MainActivity" android:theme="@style/AppTheme.NoActionBar">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <!-- 스플래시(어플 시작할때 잠깐 뜨는 이미지 -->
    <activity android:name=".app.ui.main.SplashActivity"
        android:screenOrientation="portrait"
        android:configChanges="orientation|keyboardHidden"
        android:theme="@style/AppTheme.NoActionBar" />
    <!-- 스플래시 -->

    <!-- 액티비티 추가할때마다 아래처럼 android:theme="@style/AppTheme.NoActionBar"도 추가해 줄것 -->
    <activity android:name=".app.ui.login.LoginActivity" android:theme="@style/AppTheme.NoActionBar" />
    <activity android:name=".app.ui.main.MainActivity2" android:theme="@style/AppTheme.NoActionBar" />
    <activity android:name=".app.ui.search.SearchActivity" android:theme="@style/AppTheme.NoActionBar" />
    <activity android:name=".app.ui.search.SearchResultActivity" android:theme="@style/AppTheme.NoActionBar" />
</application>

</manifest>